site_name: ATC RE&CT
docs_dir: ./generated_analytics/markdown_documents/

theme:
    name: 'readthedocs'
    custom_dir: ./generated_analytics/markdown_documents/rtd_dropdown/

extra_css:
    - ./generated_analytics/markdown_documents/extra.css

nav:
    - Introduction:
        - RE&CT: README.md
    - Response Actions:
        {%- for stage_name, stage_actions in stages -%}
            {%- if stage_actions is not none and stage_actions|length -%}
            {{'\n'}}        - {{stage_name}}:
                {%- for action_title, action_filename in stage_actions -%} {{'\n'}}            - "{{action_title}}": ./Response_Actions/{{action_filename}}.md {%- endfor -%}
            {%- endif -%}
        {%- endfor %}
    {%- if playbooks is not none and playbooks|length -%}
    {{'\n'}}- Response Playbooks:
        {%- for playbook_title, playbook_path in playbooks -%}
            {{'\n'}}    - "{{playbook_title}}": ./Response_Playbooks/{{playbook_path}}.md
        {%- endfor -%}
    {%- endif -%}
